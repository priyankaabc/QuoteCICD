<script>
    $(document).ready(function () {
        //kendo.culture("en-IN");

        /* custom select option */
        $(".custom-inputs .custom-selection").niceSelect();

        /* review slider */
        var reviewSlider = $("#reviewSlider");
        reviewSlider.owlCarousel({
            margin: 40,
            loop: true,
            autoplay: true,
            dots: false,
            responsive: {
                0: {
                    items: 1
                },
                992: {
                    items: 2
                },
                1200: {
                    items: 3
                }
            }
        });

        var errormessage = '@TempData[CustomEnums.NotifyType.Error.GetDescription()]';
        var successmessage = '@TempData[CustomEnums.NotifyType.Success.GetDescription()]';
        if (errormessage !== "") {
            ShowErrorMessage(errormessage);
        }

        if (successmessage !== "") {
            SucessMessage(successmessage);
        }
    });

    function ShowErrorMessage(msg) {
        var pNotify = new PNotify({
            text: msg,
            type: 'error'
        });
    }

    function SucessMessage(msg) {
        var pNotify = new PNotify({
            text: msg,
            type: 'success'
        });
    }

    function LoadQuoteDetails(quoteType) {
        $.ajax({
            url: '@Url.Action("QuoteDetails", "Common")',
            type: 'GET',
            cache: false,
            data: {
                countryCode: '@SessionHelper.ToCountryCode',
                quoteType: '@SessionHelper.QuoteType'
            }
        }).done(function (result) {
            $('#QuoteDetails').html(result);
        });
    }
</script>