@{
    ViewBag.Title = "HomeConsultationOrService";
}
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

<style>
    .btn {
        min-width: 0px !important;
    }

    .btn-lg {
        min-width: 140px !important;
    }
</style>

<div class="page-breadcrumb text-center font-nr mb-2">
    <ul>
        <li><a href="@Url.Action("Index","Home")">Home</a></li>
        <li><a href="#">Get a quote</a></li>
        <li><a href="#">Your international move</a></li>
        <li><a href="#">Move details</a></li>
        <li><a href="#">Removal service selection</a></li>
        <li><a href="#">Home Survey</a></li>
    </ul>
</div>

<h1 class="text-primary text-center mb-4"><b>Arrange a free home survey</b></h1>
<p>We will need to arrange a survey of the goods you want to move.</p>
<p>Your quote will be based on the volume we assess at your survey.</p>
<div class="row justify-content-center">
    <div class="col-md-9 my-4">
        <ul class="progress-steps">
            <li class="active disabled">First Step</li>
            <li class="active disabled">Second Step</li>
            <li class="active">Third Step</li>
        </ul>
    </div>
    @*<div class="col-12">
        <p>Quote Number: <span class="text-success">AP3172013/1</span></p>
    </div>*@
    <div class="col-12">
        <div class="pt-2">
            <div class="row">
                <div class="col-lg-4 col-md-5">
                    <h5 class="my-4"><b><span class="text-success">Select a preferred date of survey</span></b></h5>
                    @*<div class="card border-0">*@
                        <div class="input-group date datespicker">
                            <input type="text" class="form-control datespicker" placeholder="dd/mm/yyyy" id="datetimepicker">
                            <div class="input-group-append input-group-addon">
                                <span class="input-group-text"><i class="bx bx-calendar-alt font-md"></i></span>
                            </div>
                        </div>
                    @*</div>*@
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 mt-5">
        <div class="border-top pt-4">
            <div class="row justify-content-between">
                <div class="col-sm-auto">
                    <a class="btn btn-secondary btn-lg rounded-pill d-flex align-items-center justify-content-center" href="@Url.Action("RemovalServiceSelection","InternationalRemoval")"><span class="pl-2" style="transform: rotate(180deg);">&#x27A1;</span> Back</a>
                </div>
                <div class="col-sm-auto">
                    <button type="button" onclick="submitData()" class="btn btn-warning btn-lg rounded-pill d-flex align-items-center justify-content-center">Next <span class="pl-2">&#x27A1;</span></button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('.datespicker').datepicker({
            format: 'dd/mm/yyyy',
            startDate: new Date()
        }).on('change', function () { $('.datepicker').hide(); });
    });

    function submitData()
    {
        var SelectDate = $("#datetimepicker").val();
        if (SelectDate == null || SelectDate == "") {
            ShowErrorMessage("Please Select Date & Time");
            return false;
        }
        else {
            var id = '@ViewBag.id';
            var datetime = $("#datetimepicker").val();
            var url = '@Url.Action("HomeConsultationOrService", "InternationalRemoval")';
            var paramValue = { 'id': id, 'value': datetime };
            callwebservice(url, paramValue, submitCompleted, false, datatypeEnum.text, typeEnum.post);
        }
    }

    function submitCompleted(returString) {
        if (returString != null) {
            if (returString !== "") {
                showMessageOnly(returString, 'popup-error');
            }
            else {
                SucessMessage("Saved Successfully ");
                @*var id = '@ViewBag.id';*@
                var url = window.location.href = '@Url.Action("ThankYou", "InternationalRemoval")';
                //var paramValue = { 'id': id};
                //callwebservice(url, paramValue, "", false, datatypeEnum.text, typeEnum.post);
            }
        }
    }
</script>
