<h1 class="text-primary text-center mb-4"><b>Arrange a free home survey</b></h1>

<div class="row justify-content-center">
    <div class="col-md-9 my-4">
        <ul class="progress-steps">
            <li class="active disabled">About You</li>
            <li class="active disabled">Quote Type</li>
            <li class="active">Move Details</li>
        </ul>
    </div>
    <div class="col-md-9">
        <p class="text-center">We will need to arrange a survey of the goods you want to move.</p>
        <p class="text-center">Your quote will be based on the volume we assess at your survey.</p>
    </div>
    <div class="col-md-5 my-4">
        <h5 class="col-md-12 my-4"><b><span class="text-success">Select a preferred date of survey</span></b></h5>
        <div class="input-group date datespicker">
            <input type="text" class="form-control datespicker" placeholder="dd/mm/yyyy" id="datetimepicker">
            <div class="input-group-append input-group-addon">
                <span class="input-group-text"><i class="bx bx-calendar-alt font-md"></i></span>
            </div>
        </div>
    </div>
    <div class="col-12 mt-5">
        <div class="border-top pt-4">
            <div class="row justify-content-between journey-btns">
                <div class="col-sm-auto order-md-12">
                    <button type="submit" class="btn btn-warning btn-lg rounded-pill d-flex align-items-center justify-content-center" id="nextButton" onclick="return submitData()">Next <span class="pl-2">&#x27A1;</span></button>
                </div>
                <div class="col-sm-auto order-md-1">
                    <button type="button" class="btn btn-link btn-lg rounded-pill d-flex align-items-center justify-content-center" onclick="location.href = '@Url.Action("RemovalServiceSelection","InternationalRemoval")'"><span class="pl-2" style="transform: rotate(180deg);">&#x27A1;</span> Back</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('.datespicker').datepicker({
            format: 'dd/mm/yyyy',
            startDate: new Date()
        }).on('change', function () { $('.datepicker').hide(); });
    });

    function submitData()
    {
        var SelectDate = $("#datetimepicker").val();
        if (SelectDate == null || SelectDate == "") {
            ShowErrorMessage("Please Select Date & Time");
            return false;
        }
        else {
            var id = '@ViewBag.id';
            var datetime = $("#datetimepicker").val();
            var url = '@Url.Action("HomeConsultationOrService", "InternationalRemoval")';
            var paramValue = { 'id': id, 'value': datetime };
            callwebservice(url, paramValue, submitCompleted, false, datatypeEnum.text, typeEnum.post);
        }
    }

    function submitCompleted(returString) {
        if (returString != null) {
            if (returString !== "") {
                showMessageOnly(returString, 'popup-error');
            }
            else {
                //SucessMessage("Saved Successfully ");
                @*var id = '@ViewBag.id';*@
                var url = window.location.href = '@Url.Action("ThankYou", "InternationalRemoval")?survey=' + "Home";
                //var paramValue = { 'survey': 'Home'};
                //callwebservice(url, paramValue, "", false, datatypeEnum.text, typeEnum.post);
            }
        }
    }
</script>
