@using QuoteCalculatorAdmin.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #tblcontentList td div.text-overflow {
        width: 400px !important;
    }
</style>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0"> Heading Content</h5>
        <a href="#" onclick="HeadingContentPopUp(0)" data-toggle="modal" data-target="#ChildEditDetailPopup" class="btn btn-warning"><i class="icon-plus2"></i> Add Child Content</a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12">
                <table id="tblcontentList" class="table dataTable nowrap" width="100%">
                    <thead>
                        <tr>
                            <th scope="col">Child Content</th>
                            <th scope="col">Country Code</th>
                            <th scope="col">Display Order</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                </table>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ChildEditDetailPopup" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <span class="h4 mb-0" id="myModalLabel">Heading content</span>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="divChildEditDetailPopup">
                </div>
            </div>
        </div>
    </div>
</div>

<script>
   var DataTable = $('#tblcontentList').DataTable();

    $(document).ready(function () {
        BindContentList();
        $("#menu_ChildContentMaster").addClass("active");
        $("#menu_Content").children().removeClass("collapsed");
        $("#menu_Content").children().addClass("show");
        $("#menu_Content").addClass("active");
    });
    function BindContentList() {
        $(".main-loader").css("display", "flex");
        try {
            if (DataTable != 'undefined') {
                DataTable.destroy();
            }
            DataTable = $('#tblcontentList').DataTable({
                colReorder: {
                    enable: false
                },
               // processing:true,
                serverSide: true,
                //language: {
                //    'processing': '<div class="loader"></div>'
                //},
                ajax: {
                    url: encodeURI('@Url.Action("GetContentList", "ChildContentMaster")'),
                    type: 'POST',
                    //data: function (d) {
                    //    d.ImportQuoteId = 10;
                    //}
                },
                "lengthMenu": [10,20, 50, 100, 200, 500],
                "pageLength": 10,
                "order": [],
                //dom: 'Blfrtip',
                "bFilter": true,
                //"aaData": data.Data,
              "aoColumns": [

                    {
                        "mData": "ChildContent",
                      "className": "text-wrap text-left"
                    },
                    {
                        "mData": "CountryCode",
                        "className": "text-wrap text-left",
                        "render": function (data, type, row, meta) {
                            var result = '<div class="text-overflow">' + row.CountryCode + '</div>';
                            return result;
                        }
                    },
                    {
                        "mData": "DisplayOrder",
                        "className": "text-left"
                    },
                    {
                        "mData": "ChildContentId",
                        "bSortable": false,
                        "className": "text-center",
                        "render": function (data, type, row, meta) {
                            var ActionButtonEdit = '<a title="Edit" onclick="HeadingContentPopUp(' + row.ChildContentId + ')"  data-toggle="modal" data-target="#usermodalPopup"class="btn pr-2 edit-icon" ><i class="fa-regular fa-pen-to-square"></i></a>';
                            var ActionButtonDelete = '<a onclick="DeleteChildContent(' + row.ChildContentId +')" title="Delete"class="btn delete-icon"><i class="fa-regular fa-trash-can"></i></a>';
                            var result = '';
                            result = result + ActionButtonEdit;
                            result = result +'&nbsp;&nbsp;&nbsp;'+ ActionButtonDelete;
                            return result;
                        }
                    }

                ],
            });
            $(".dataTables_length").css('clear', 'none');
            $(".dataTables_length").css('margin-right', '20px');
            $(".dataTables_info").css('clear', 'none');
            $(".dataTables_info").css('padding', '0');
        } catch (e) {
            alert(e.message);
        }
        $(".main-loader").css("display", "none");
    }
    function DeleteChildContent(Id) {

         bootbox.confirm({
            message: "Are You Sure You Want To Delete Child Content?",
            buttons: {
                cancel: {
                    label: "No",
                    className: "btn btn-cancel min-auto cancel"
                },
                confirm: {
                    label: "Yes, Delete",
                    className: "btn btn-warning min-auto confirm"
                }
            },
            callback: function(result) {
            if (result) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Destroy", "ChildContentMaster")',
                    dataType: 'json',
                    data: { Id: Id },
                    cache: false,
                    async: false,
                    success: function (data) {
                        if (data) {
                            toastr.success(data.Message);
                            //$('#BaggageQuoteGrid').data('kendoGrid').dataSource.read();
                            BindContentList();
                        }
                    },
                    error: function () {
                        alert("We are facing some problem please try again later");
                        //$('#BaggageQuoteGrid').data('kendoGrid').dataSource.read();
                    }
                });
            }

        }
        });
    }

    function HeadingContentPopUp(ChildContentId) {

        $.ajax({
            url: '@Url.Action("ChildContentOpen", "ChildContentMaster")?ChildContentId=' + ChildContentId,
            async: false,
            type: 'GET',
            beforeSend: function () {
                $(".main-loader").css("display", "flex");
            },
            success: function (data) {
                if (data) {
                    $('#ChildEditDetailPopup').modal('show');
                    $('#divChildEditDetailPopup').html(data);
                }
                setTimeout(function () { $(".main-loader").css("display", "none"); }, 500);
            }
        });

        setTimeout(function () { $(".main-loader").css("display", "none"); }, 500);
    }

